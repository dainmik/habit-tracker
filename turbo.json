{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"globalEnv": ["REPO_WORKSPACE_ROOT", "DB_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["BASE_URL"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {
			"env": ["CI"]
		},
		"type-check": {},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		"test-unit": {
			"dependsOn": ["@repo/shared-config-vitest#build"],
			"outputs": ["coverage.json"]
		},
		"test-unit:watch": {
			"cache": false,
			"persistent": true
		},
		"test-e2e": {
			"dependsOn": ["^build"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		}
	}
}
