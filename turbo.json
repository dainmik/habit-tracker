{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"globalEnv": ["REPO_WORKSPACE_ROOT"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["BASE_URL"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"env": ["CI"]
		},
		"type-check": {
			"dependsOn": ["^type-check"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test:e2e": {
			"dependsOn": ["^build"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		}
	}
}
