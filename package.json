{
	"private": true,
	"name": "repo",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --continue",
		"test-unit": "turbo run test-unit --continue",
		"test-unit:watch": "turbo run test-unit:watch --continue",
		"lint": "turbo run lint --continue",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"type-check": "turbo run type-check --continue",
		"clean": "./scripts/clean.sh"
	},
	"devDependencies": {
		"prettier": "^3.5.3",
		"turbo": "^2.5.4",
		"typescript": "5.8.3"
	},
	"packageManager": "pnpm@10.11.1",
	"engines": {
		"node": ">=24"
	}
}
